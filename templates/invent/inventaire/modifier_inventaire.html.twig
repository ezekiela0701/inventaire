{% extends 'base.html.twig' %}

{% block body %}
<div class="box box-solid content">
        <div class="box-header with-border">
            <h3 class="box-title">Modifier information </h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="card">
                    <div class="card-body">
                            <div class="row">
                            {{form_start(ModificationInventaireView)}}
                                <div class="col-lg-6">
                                    {{form_row(ModificationInventaireView.DateReception)}}
                                    {{form_row(ModificationInventaireView.Designation)}}
                                    {{form_row(ModificationInventaireView.NumerosSerie)}}
                                    {{form_row(ModificationInventaireView.CodeComplet)}}

                                </div>
                                <div class="col-lg-6">
                                    {{form_row(ModificationInventaireView.DateAffectation)}}
                                    {{form_row(ModificationInventaireView.emplacement)}}
                                    {{form_row(ModificationInventaireView.Identification)}}
                                </div>
                            
                            </div>


                    </div>

                    <div class="box-footer">
                        <div class="row">
                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-success btn-block"> Modifier Information</button>
                            </div>
                            <div class="col-lg-6">
                                <button type="reset" class="btn btn-danger btn-block">Annuler Information</button>
                            </div>
                        </div>
                    </div>

                    {{form_end(ModificationInventaireView)}}
                </div>
    </div>
{% endblock %}