{% extends 'base.html.twig' %}

{% block body %}
<section class="content">
 <div class="box box-solid">
                <div class="box-header with-border">
                  <h3 class="box-title">Historique des inventaires</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                    <div class="card">
                                        <!-- <h5 class="card-header">Examples</h5> -->
                    <div class="card-body">
                    <div class="">
                    <div class="container">
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Ajouter nouveau inventaire
                        </a>
                    </div>                         
                   
                                                <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Ajouter nouveau inventaire</h5>
                                            <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                                                 <span aria-hidden="true">&times;</span>
                                            </a>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        {{form_start(InventaireView)}}
                                            <div class="col-lg-6">
                                                {{form_row(InventaireView.DateReception)}}
                                                {{form_row(InventaireView.Designation)}}
                                                {{form_row(InventaireView.NumerosSerie)}}
                                                {{form_row(InventaireView.CodeComplet )}}
                                            </div>
                                            <div class="col-lg-6">
                                                {{form_row(InventaireView.DateAffectation)}}
                                                {{form_row(InventaireView.emplacement)}}
                                                {{form_row(InventaireView.Identification)}}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <button type="submit" class="btn btn-block btn-info">Ajouter</button>
                                            </div>
                                            <div class="col-lg-6">
                                                <button type="reset" class="btn btn-block btn-danger">Annuler</button>
                                            </div>
                                            {{form_end(InventaireView)}}
                                        </div>
                                        <div class="modal-footer">
                                            <a href="#" class="btn btn-warning" data-dismiss="modal">RÃ©duire</a>
                                                                <!-- <a href="#" class="btn btn-primary">Save changes</a> -->
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <br>

                    <div class="content">
                    <table id="example1" class="table table-bordered table-striped table-hover">
                    <thead>
                      <tr>
                        <th>Code</th>
                        <th>Emplacement</th>
                        <th>Action</th>
                        <th>Designation</th>
                        <th>Identification</th>
                      </tr>
                    </thead>
                    <tbody>
                    {% for base in BaseCode %}
                      <tr>
                        <td>{{base.CodeComplet}} </td>
                        <td> {{base.emplacement}} </td>
                        <td>
                          <a href="{{path('inventaire_detail' , {'id' : base.id} )}}" class="btn btn-warning"><span class="glyphicon glyphicon-eye-open"></span></a>
                          <a href="{{path('modifier_inventaire' , {'id' : base.id} )}}" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span></a>
                          <a href="{{path('supprimer_inventaire' , {'id' : base.id})}}" class="btn btn-danger" onClick="return confirm('Voulez vous vraiment supprimer ce code?')"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                        <td> {{base.Designation}} </td>
                        <td>{{base.Identification}}</td>
                      </tr>
                    {% endfor %} 
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>Code </th>
                        <th>Emplacement</th>
                        <th>Action</th>
                        <th>Designation</th>
                        <th>Identification</th>
                      </tr>
                    </tfoot>
                  </table>
                  </div>




                </div>
    </div>
    </section>
{% endblock %}